        <script>
            async function deleted(event)
            {
                let userID = event.target.id.split("-")[1];
                let adminUsername = event.target.id.split("-")[2];
                console.log(userID,adminUsername);
                const rawResponse = await fetch('/deleteuser/'+userID, {

                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({userID,adminUsername})
                });

                const response = await rawResponse.json();
                if(response.redirect){
                    location.assign(response.redirect);
                }

                // console.log(e.target.id);
                // window.location.reload();
            }
        
        </script>
