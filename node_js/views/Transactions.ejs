                </table>
                <% let tok = token %>
                <button class="btn btn-secondary" id="new_row" >Add Row</button>
                <button class="btn btn-secondary" id="delete_row">Delete Row</button>
                <button class="btn btn-secondary" id="close">Close</button>
                <br><br>
               
                <button class="btn btn-secondary" id = <%= tok %> onclick="adtransac(event)" type="submit">Add Transaction</button>
                <form>
            </div>
