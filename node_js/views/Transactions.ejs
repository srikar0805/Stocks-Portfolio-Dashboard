                <label for="import" style="margin-left: 1%;">Import via csv</label>
                <input type="file" accept=".csv" class="btn btn-secondary" id="import"></input>
            </div>
            <br>
            
            <div id="tab">
                <form action="/transactions" id="trans_form">
